{
  "tabWidth": 2,
  "importOrder": [
    "^react(.*)$",
    "<THIRD_PARTY_MODULES>",
    "^@/app(.*)$",
    "^@/pages(.*)$",
    "^@/widgets(.*)$",
    "^@/features(.*)",
    "^@/entities(.*)",
    "^@/shared(.*)",
    "^types(.*)$",
    "^styles(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "printWidth": 100,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "none",
  "jsxSingleQuote": false,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always"
}
